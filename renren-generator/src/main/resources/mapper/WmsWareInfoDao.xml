<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.mall.ware.dao.WmsWareInfoDao">

    <resultMap type="com.project.mall.ware.entity.WmsWareInfo" id="WmsWareInfoMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="address" column="address" jdbcType="VARCHAR"/>
        <result property="areacode" column="areacode" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="WmsWareInfoMap">
        select
          id, name, address, areacode
        from wms_ware_info
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="WmsWareInfoMap">
        select
          id, name, address, areacode
        from wms_ware_info
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="address != null and address != ''">
                and address = #{address}
            </if>
            <if test="areacode != null and areacode != ''">
                and areacode = #{areacode}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from wms_ware_info
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="address != null and address != ''">
                and address = #{address}
            </if>
            <if test="areacode != null and areacode != ''">
                and areacode = #{areacode}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into wms_ware_info(name, address, areacode)
        values (#{name}, #{address}, #{areacode})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into wms_ware_info(name, address, areacode)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.name}, #{entity.address}, #{entity.areacode})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into wms_ware_info(name, address, areacode)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.address}, #{entity.areacode})
        </foreach>
        on duplicate key update
        name = values(name),
        address = values(address),
        areacode = values(areacode)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update wms_ware_info
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="address != null and address != ''">
                address = #{address},
            </if>
            <if test="areacode != null and areacode != ''">
                areacode = #{areacode},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from wms_ware_info where id = #{id}
    </delete>

</mapper>

